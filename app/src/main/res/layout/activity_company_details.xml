<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.prakruthi.billingapp.spotbilling.CompanyDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp">

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/companyDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company Details"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:textColor="@color/colorPrimaryDarkGreen"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textinputlayout_companynameenglish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/details_company_name_english"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Company Name(English)"
                    android:inputType="text"
                    android:paddingBottom="40dp"
                    android:singleLine="true"
                    android:text="" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textinputlayout_companyNameKannada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/details_company_name_kannada"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:hint="Company Name(kannada)"
                    android:inputType="text"
                    android:paddingBottom="40dp"
                    android:singleLine="true"
                    android:text="" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/textinputlayout_companyAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/details_company_address"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Company Address"
                    android:inputType="text"
                    android:paddingBottom="40dp"
                    android:singleLine="true"
                    android:text="" />

            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:id="@+id/textinputlayout_companyEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/details_company_email"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Company Email"
                    android:inputType="text"
                    android:paddingBottom="40dp"
                    android:singleLine="true"
                    android:text="" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textinputlayout_companyNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/details_company_number"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Company Number"
                    android:inputType="numberDecimal"
                    android:paddingBottom="40dp"
                    android:singleLine="true"
                    android:text="" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_company_saverecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Save" />

                <Button
                    android:id="@+id/btn_company_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancel" />
            </LinearLayout>


        </LinearLayout>
        <!-- </android.support.v7.widget.CardView>-->
    </ScrollView>


</LinearLayout>