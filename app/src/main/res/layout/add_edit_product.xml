<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/Ghost_White"
    >



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp">

    <!-- <android.support.v7.widget.CardView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         app:cardCornerRadius="8dp"
         app:contentPadding="10dp"
         android:elevation="4dp"
         >
-->
    >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product Description"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:textColor="@color/colorPrimaryDarkGreen"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/add_edit_product_name_english"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="Product Name(English)"
                        android:inputType="text"
                        android:paddingBottom="40dp"
                        android:singleLine="true"
                        android:text="" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/add_edit_product_name_kannada"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:hint="Product Name(kannada)"
                        android:inputType="text"
                        android:paddingBottom="40dp"
                        android:singleLine="true"
                        android:text="" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/add_edit_measure_unit"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="Measuring Unit"
                        android:inputType="text"
                        android:paddingBottom="40dp"
                        android:singleLine="true"
                        android:text="" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/add_edit_rate_per_quantity"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="Rate per Quantity"
                        android:inputType="text"
                        android:paddingBottom="40dp"
                        android:singleLine="true"
                        android:text="" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/add_edit_discount_type"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="Discount type"
                        android:inputType="text"
                        android:paddingBottom="40dp"
                        android:singleLine="true"
                        android:text="" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/add_edit_Discount_rate"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="Discount rate"
                        android:inputType="text"
                        android:paddingBottom="40dp"
                        android:singleLine="true"
                        android:text="" />

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Save" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cancel" />
                </LinearLayout>


            </LinearLayout>
           <!-- </android.support.v7.widget.CardView>-->
        </ScrollView>


</LinearLayout>
