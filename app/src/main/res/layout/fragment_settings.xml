<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fcs.billingapp.fragments.SettingsFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bluetooth_settingform"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Dark_Blue"
        android:gravity="center"
        android:text="Bluetooth Settings"
        android:textColor="@color/Ghost_White"
        android:textSize="30sp" />


        <TextView
            android:id="@+id/label3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Bluetooth Connection Settings"
            android:textColor="@color/Cool_Black"
            android:textSize="22dp" />


        <!-- <EditText
                    android:id="@+id/entry"
                    android:layout_width="fill_parent"
                    android:layout_height="102dp"
                    android:layout_below="@id/label"
                    android:background="@android:drawable/editbox_background"
                    />-->
        <TextView
            android:id="@+id/label1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/open"
            android:layout_alignRight="@+id/open"
            android:padding="10dp"
            android:textColor="@color/British_Racing_Green"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/Cornell_Red"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--<Button
                android:id="@+id/send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/open"
                android:layout_toLeftOf="@id/open"
                android:layout_weight="1"
                android:text="Send" />-->

            <Button
                android:id="@+id/open"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:padding="50dp"
                android:text="Open Bluetooth Connection"
                android:textSize="20dp"
                android:background="@drawable/my_update_button"
                android:textColor="@color/White"
                />

            <Button
                android:id="@+id/close"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:padding="50dp"
                android:text="Close Bluetooth Connection"
                android:textColor="@color/White"
                android:textSize="20dp"
                android:background="@drawable/my_reject_button"
                />

        </LinearLayout>
    </LinearLayout>
    </ScrollView>



</FrameLayout>
